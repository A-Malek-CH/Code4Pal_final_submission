<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gaza Relief Donation</title>
    
     
</head>
<body>
  <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #fafafa;
            color: #333;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header Styles */
        .header {
            background-color: #155724;
            color: #FFFFFF;
            text-align: center;
            padding: 20px 0;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        /* Main Content Layout */
        .main-content {
            display: flex;
            gap: 30px;
            margin-bottom: 40px;
        }

        .form-section {
            flex: 2;
        }

        .card-options {
            flex: 1;
            min-height: 400px;
        }

        /* Form Styles */
        .donation-form {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #555;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #87CEEB;
        }

        .form-group textarea {
            resize: vertical;
            height: 100px;
        }

        /* Card Selection Styles */
        .card-selection {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            position: sticky;
            top: 20px;
        }

        .card-selection h3 {
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

        .card-options-list {
            display: none;
        }

        .card-options-list.active {
            display: block;
        }

        .card-option {
            display: flex;
            align-items: center;
            padding: 15px;
            margin-bottom: 10px;
            border: 2px solid #eee;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .card-option:hover {
            border-color: #87CEEB;
            background-color: #f8f9fa;
        }

        .card-option.selected {
            border-color: #87CEEB;
            background-color: #e6f3ff;
        }

        .card-option img {
            width: 40px;
            height: 40px;
            margin-right: 15px;
            border-radius: 5px;
        }

        .card-option .card-name {
            font-weight: bold;
            color: #333;
        }

        /* Payment Details */
        .payment-details {
            margin-top: 20px;
            display: none;
        }

        .payment-details.active {
            display: block;
        }

        .payment-details input {
            width: 100%;
            padding: 12px;
            margin-bottom: 10px;
            border: 2px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

        /* Donate Button */
        .donate-btn {
            width: 100%;
            background: linear-gradient(45deg, #155724, #2ecd53);
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 20px;
        }

        .donate-btn:hover {
            background: linear-gradient(45deg, #155724, #155724);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.2);
        }

        /* Responsive Design */
        
        /* Minimum 770px */
        @media (min-width: 770px) {
            .main-content {
                flex-direction: row;
            }
            
            .header h1 {
                font-size: 3rem;
            }
            
            .container {
                padding: 0 30px;
            }
        }

        /* 640px - 769px */
        @media (max-width: 769px) and (min-width: 640px) {
            .main-content {
                flex-direction: column;
            }
            
            .card-selection {
                position: static;
            }
            
            .header h1 {
                font-size: 2.5rem;
            }
            
            .container {
                padding: 0 25px;
            }
        }

        /* 480px - 639px */
        @media (max-width: 639px) and (min-width: 480px) {
            .main-content {
                flex-direction: column;
                gap: 20px;
            }
            
            .donation-form,
            .card-selection {
                padding: 20px;
            }
            
            .header h1 {
                font-size: 2rem;
            }
            
            .header p {
                font-size: 1rem;
            }
            
            .container {
                padding: 0 20px;
            }
        }

        /* 320px - 479px */
        @media (max-width: 479px) and (min-width: 320px) {
            .main-content {
                flex-direction: column;
                gap: 15px;
            }
            
            .donation-form,
            .card-selection {
                padding: 15px;
            }
            
            .header {
                padding: 15px 0;
            }
            
            .header h1 {
                font-size: 1.8rem;
            }
            
            .header p {
                font-size: 0.9rem;
            }
            
            .container {
                padding: 0 15px;
            }
            
            .card-option {
                padding: 10px;
            }
            
            .card-option img {
                width: 30px;
                height: 30px;
            }
        }

        /* Below 320px */
        @media (max-width: 319px) {
            .main-content {
                flex-direction: column;
                gap: 10px;
            }
            
            .donation-form,
            .card-selection {
                padding: 10px;
            }
            
            .header {
                padding: 10px 0;
            }
            
            .header h1 {
                font-size: 1.5rem;
            }
            
            .header p {
                font-size: 0.8rem;
            }
            
            .container {
                padding: 0 10px;
            }
            
            .form-group input,
            .form-group select,
            .form-group textarea {
                padding: 8px;
                font-size: 14px;
            }
            
            .card-option {
                padding: 8px;
            }
            
            .card-option img {
                width: 25px;
                height: 25px;
                margin-right: 10px;
            }
            
            .donate-btn {
                padding: 12px 20px;
                font-size: 1rem;
            }
        }

        /* Loading state */
        .loading {
            opacity: 0.6;
            pointer-events: none;
        }

        .success-message {
            display: none;
            background-color: #d4edda;
            color: #155724;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border: 1px solid #c3e6cb;
        }

        .error-message {
            display: none;
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border: 1px solid #f5c6cb;
        }

        /* Homepage Redirect Dialog */
        .redirect-dialog {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .redirect-dialog.active {
            display: flex;
        }

        .dialog-content {
            background: white;
            padding: 30px;
            border-radius: 10px;
            text-align: center;
            max-width: 400px;
            margin: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            animation: slideIn 0.3s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .dialog-content h3 {
            color: #333;
            margin-bottom: 15px;
            font-size: 1.5rem;
        }

        .dialog-content p {
            color: #666;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .dialog-content p:last-of-type {
            margin-bottom: 25px;
            font-weight: bold;
            color: #333;
        }

        .dialog-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .dialog-btn {
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            min-width: 120px;
        }

        .dialog-btn.primary {
            background: linear-gradient(45deg, #87CEEB, #4682B4);
            color: white;
        }

        .dialog-btn.primary:hover {
            background: linear-gradient(45deg, #4682B4, #87CEEB);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .dialog-btn.secondary {
            background: #f8f9fa;
            color: #333;
            border: 2px solid #ddd;
        }

        .dialog-btn.secondary:hover {
            background: #e9ecef;
            border-color: #adb5bd;
            transform: translateY(-1px);
        }

        /* Responsive dialog */
        @media (max-width: 479px) {
            .dialog-content {
                padding: 20px;
                margin: 15px;
            }
            
            .dialog-buttons {
                flex-direction: column;
            }
            
            .dialog-btn {
                width: 100%;
                min-width: auto;
            }
        }
</style>
  
    <header class="header">
        <div class="container">
            <h1>Thank You for Your Generosity</h1>
            <p>Your donation makes a difference in Gaza relief efforts</p>
        </div>
    </header>

    <div class="container">
        <div class="success-message" id="successMessage">
            Thank you! Your donation has been submitted successfully.
        </div>
        
        <div class="error-message" id="errorMessage">
            Please fill in all required fields and select a payment method.
        </div>

        <div class="main-content">
            <div class="form-section">
               
                   
                    
                     <form class="donation-form" id="donationForm" action="/donate/<%= typeof id_patient !== 'undefined' ? id_patient : '' %>" method="POST" >
  
                      <h2>Donation Information</h2>
    <input value="<%=id_donator%>" name="id_donator" hidden><br>
    <div class="form-group">
<label>Amount *</label>
  <input type="number" name="price"><br>
  </div>

<div class="form-group">
                        <label for="country">Country *</label>
                        <select id="country" name="country" required>
                            <option value="">Select your country</option>
                            <option value="US">United States</option>
                            <option value="UK">United Kingdom</option>
                            <option value="CA">Canada</option>
                            <option value="AU">Australia</option>
                            <option value="DE">Germany</option>
                            <option value="FR">France</option>
                            <option value="IT">Italy</option>
                            <option value="ES">Spain</option>
                            <option value="NL">Netherlands</option>
                            <option value="SE">Sweden</option>
                            <option value="NO">Norway</option>
                            <option value="DK">Denmark</option>
                            <option value="JP">Japan</option>
                            <option value="KR">South Korea</option>
                            <option value="SG">Singapore</option>
                            <option value="AE">UAE</option>
                            <option value="SA">Saudi Arabia</option>
                            <option value="EG">Egypt</option>
                            <option value="JO">Jordan</option>
                            <option value="LB">Lebanon</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="cardSelection">Payment Method *</label>
                        <select id="cardSelection" name="cardSelection" required>
                            <option value="">Select payment method</option>
                            <option value="cards">Credit/Debit Cards & Digital Wallets</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message (Optional)</label>
                        <textarea id="message" name="message" placeholder="Leave a message of support..."></textarea>
                    </div>
                    <button type="submit" class="donate-btn" id="donateBtn">  Donate Now</button>

                    </form>
                   <a href="/logout">  <button  class="donate-btn" id="donateBtn">  Log Out</button>
                      </a>
                   </div>
            
            <div class="card-options">
                <div class="card-selection">
                    <h3>Select Payment Option</h3>
                    <div class="card-options-list" id="cardOptionsList">
                        <div class="card-option" data-card="paypal">
                            <div style="width: 40px; height: 40px; background: #0070ba; border-radius: 5px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 15px;">PP</div>
                            <div class="card-name">PayPal</div>
                        </div>
                        
                        
                        
                        <div class="card-option" data-card="googlepay">
                            <div style="width: 40px; height: 40px; background: #4285f4; border-radius: 5px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 15px;">GP</div>
                            <div class="card-name">Google Pay</div>
                        </div>
                        
                        <div class="card-option" data-card="applepay">
                            <div style="width: 40px; height: 40px; background: #000; border-radius: 5px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 15px;">AP</div>
                            <div class="card-name">Apple Pay</div>
                        </div>
                        
                        <div class="card-option" data-card="wise">
                            <div style="width: 40px; height: 40px; background: #9fdb1e; border-radius: 5px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 15px;">W</div>
                            <div class="card-name">Wise</div>
                        </div>
                        
                        <div class="card-option" data-card="mastercard">
                            <div style="width: 40px; height: 40px; background: linear-gradient(90deg, #eb001b 50%, #f79e1b 50%); border-radius: 5px; margin-right: 15px;"></div>
                            <div class="card-name">MasterCard</div>
                        </div>
                    </div>
                    
                   
                </div>
            </div>
        </div>
    </div>

   
    <script >document.addEventListener('DOMContentLoaded', function() {
    const cardSelection = document.getElementById('cardSelection');
    const cardOptionsList = document.getElementById('cardOptionsList');
    const cardOptions = document.querySelectorAll('.card-option');
    const donationForm = document.getElementById('donationForm');
    const donateBtn = document.getElementById('donateBtn');

    let selectedCard = null;

    // إظهار خيارات البطاقات عند اختيار "cards"
    cardSelection.addEventListener('change', function() {
        if (this.value === 'cards') {
            cardOptionsList.classList.add('active');
        } else {
            cardOptionsList.classList.remove('active');
            selectedCard = null;
            cardOptions.forEach(opt => opt.classList.remove('selected'));
        }
    });

    // عند اختيار بطاقة معينة
    cardOptions.forEach(option => {
        option.addEventListener('click', function() {
            cardOptions.forEach(opt => opt.classList.remove('selected'));
            this.classList.add('selected');
            selectedCard = this.dataset.card;
        });
    });

    // عند إرسال النموذج
    donationForm.addEventListener('submit', function(e) {
        e.preventDefault();

        // التحقق فقط من أن المستخدم اختار بطاقة دفع
        if (!selectedCard) {
            alert('من فضلك اختر طريقة الدفع.');
            return;
        }

        // إرسال اسم طريقة الدفع فقط (هنا مجرد مثال console)
        console.log('طريقة الدفع المختارة هي: ' + selectedCard);

        // يمكنك هنا إرسالها للسيرفر عبر fetch أو AJAX بدل الـ console
        donateBtn.textContent = 'تم الإرسال';
        donateBtn.disabled = true;
    });
});


 </script>
</body>
</html>
